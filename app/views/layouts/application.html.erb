<!doctype html>
<html class="no-js" lang="en">
	<head>
		<meta charset="utf-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    	<title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>


    	<%= stylesheet_link_tag    "application" %>
    	<%= javascript_include_tag "application", 'data-turbolinks-track' => true %>
    	<%= csrf_meta_tags %>

		<link rel="stylesheet" href="http://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.min.css">

		<link href='http://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css' rel='stylesheet' type='text/css'>

		<!-- foundation css motion-ui library -->
   		 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/motion-ui/1.1.1/motion-ui.min.css" />

	<!-- uploadcare -->
  	<script>UPLOADCARE_PUBLIC_KEY = "b87de74d4f4e35f8c03e";</script>
	<script src="https://ucarecdn.com/widget/2.9.0/uploadcare/uploadcare.full.min.js" charset="utf-8"></script>

	</head>

  <body>
  	<div class="top-bar" id="lexaMenu">

		<div class="top-bar-left">

			<ul class="menu" data-responsive-menu="accordion">
				<li class="menu-text"><%= link_to 'Lexa', :home %></li>
				<li><%= link_to 'About', :about %>
				<li><%= link_to 'Lawyers', '/lawyers' %>
				<li><a href="#">FAQ</a></li>
				<li><%= link_to 'Blog', '/blog' %>
				<li><%= link_to 'Contact', '/contact' %>
			</ul>
		</div>
	
	<nav>
		<ul>
		<% if current_user != nil %>
          <%if current_user.user_t == 'lawyers' %>
              <li><%= link_to "Clients", '/clients' %></li>
              <li><%= link_to "Profile", lawyer_path(current_user) %></li>
              <%else%>
              <li><%= link_to "Lawyers", '/lawyers' %></li>
              <li><%= link_to "Profile", client_path(current_user) %></li>
              <%end%>
             <%end%>
        </ul>
        </nav>



	<div class="top-bar-right">
		<ul class="menu">
			<li><%= link_to "Home", "/" %></li>
			<li><a href="#">My Account</a></li>
			<li><a class="button">Login</a></li>
		</ul>
	</div>
</div>



    <%= yield %>

  <footer>
	<div class="row expanded callout secondary">
		<div class="small-6 large-3 columns">
			<p class="lead">Offices</p>
		<ul class="menu vertical">
			<li><a href="#">SF</a></li>
			<li><a href="#">NYC</a></li> 
		</ul>
	</div>

	<div class="small-6 large-3 columns">
		<p class="lead">Know Your Rights</p>
		<ul class="menu vertical">
			<li><a href="#">Legal Reference</a></li>
			<li><a href="#">ABA</a></li>
		</ul>
	</div>


	<div class="small-6 large-3 columns">
		<p class="lead">Contact</p>
		<ul class="menu vertical">
			<li><a href="#"><i class="fi-social-twitter"></i> Twitter</a></li>
			<li><a href="#"><i class="fi-social-facebook"></i> Facebook</a></li>
		</ul>
	</div>

	<div class="small-6 large-3 columns">
		<p class="lead">Locations</p>
		<ul class="menu vertical">
			<li><a href="#">SF</a></li>
			<li><a href="#">NYC</a></li>
		</ul>
	</div>
</div>


	<div class="row">
		<div class="medium-6 columns">
			<ul class="menu">
				<li><%= link_to 'About', :about %>
				<li><%= link_to 'Lawyers', '/lawyers' %>
				<li><%= link_to 'Blog', '/blog' %>
				<li><%= link_to 'Contact', '/contact' %>
			</ul>
		</div>


	<div class="medium-6 columns">
		<ul class="menu float-right">
			<li class="menu-text">Copyright 2016</li>
		</ul>
	</div>
  </div>
</footer>

<p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>


</body>
</html>
